    <materials>
        <material name='solidRed'    type='solid' color='red' />
        <material name='solidWhite'    type='solid' color='white' />
    </materials>

    <objects>
        <sphere x='0' y='-3' z='0' radius='3' material='solidRed' />
        <plane p0='(2,0,3)' p1='(0,0,0)' p2='(2,0,4)' material='solidWhite' />
    </objects>
</scene>
