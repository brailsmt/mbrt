<scene>
    <meta>
        <width  pixels="512" />
        <file name="renders/single_red_sphere.ppm" />
        <height pixels="512" />
        <subpixels square_of='2'/>
        <recurse max_depth='1' />
    </meta>

    <camera x='0.0' y='-1.0' z='-10' />

    <light_sources>
        <sphere x='20.0' y='-25' z='-50' radius='0.1' color='white' />
